<section>
  {{#if EmailError}}
    <div>
      <div class="signup-emailErr text-center">
        <p>{{EmailError}}</p>
      </div>
    </div>
  {{/if}}
</section>

<div class="my-login-page">
  <section class="h-100">
    <div class="container main-container h-100">
      <div class="row justify-content-center h-100">
        <div class="" style="width: 570px;">
          <div class="top-heading-main_div">
            <div class="p-3 top-heading-sub_div">
            </div>
          </div>
          <div class="card fat">
            <div class="card-body">
              <h4 class="card-title text-center" style="font-family: 'Avenir', sans-serif ;">Register</h4>
              <form action="signup" style="font-family: 'Avenir', sans-serif ;" method="post" id="signupFormvalidate" class="signup-form" >
                <div class="row">
                  <div class="col" style="margin: 10px 0px;">
                    <input type="text" name="name" id="" class="form-control" placeholder="First name"/>
                  </div>
                  <div class="col" style="margin: 10px 0px;">
                    <input type="text" name="father_name" id="father_name" class="form-control" placeholder="Father name" />
                  </div>
                </div>
                <div class="row">
                  <div class="col" style="margin: 10px 0px;">
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="gender" id="male" value="male" />
                      <label class="form-check-label" for="inlineRadio1" >Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                      <input class="form-check-input" type="radio" name="gender" id="female" value="female" />
                      <label class="form-check-label" for="inlineRadio2" >Female</label>
                    </div>
                  </div>
                  <div class="col" style="margin: 10px 0px;">
                    <input type="date" id="date_of_birth" name="date_of_birth" class="form-control" placeholder="Date of birth" />
                  </div>
                </div>
                <div class="row">
                  <div class="col" style="margin: 10px 0px;">
                    <input type="text" id="address" name="address" class="form-control" placeholder="Address" />
                  </div>
                  <div class="col" style="margin: 10px 0px;">
                    <input type="text" name="block" id="block" class="form-control" placeholder="Block no." />
                  </div>
                </div>
                <div class="row">
                  <div class="col" style="margin: 10px 0px;">
                    <input id="email" placeholder="E-Mail " type="email" class="form-control text-center" name="email" />
                  </div>
                  <div class="col" style="margin: 10px 0px;">
                    <input id="password" placeholder="Password" type="password" class="text-center form-control" name="password" autocomplete="on" />
                  </div>
                </div>

                <div class="form-group m-0">
                  <button type="submit" style="color: #fff;background-color: #2a0fbb;border-color: #140ba7;" class="btn btn-block font-size-18" class="btn btn-block" >
                    Register
                  </button>
                </div>
                <div class="mt-4 text-center font-size-15">
                  Already have an account?
                  <a href="/login" class="">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>