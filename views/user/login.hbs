<section>
    {{#if MESSAGE}}
    <div>
        <div class="signup-emailErr text-center">
            <p>{{MESSAGE.message}}</p>
        </div>
    </div>
    {{/if}}
</section>

<div class="my-login-page">
    <section class="h-100">
        <div class="container main-container">
            <div class="row justify-content-center h-100">
                <div class="card-wrapper">
                    <div class="top-heading-main_div">
                        <div class="p-3 top-heading-sub_div">
                        </div>
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title text-center" style="font-family: 'Avenir', sans-serif ;">Login</h4>
                            <form action="/login" method="post" id="LoginForm" style="font-family: 'Avenir', sans-serif ;">
                                <div class="form-group">
                                    <input id="email" type="email" class="text-center form-control" placeholder="E-Mail" name="email">
                                </div>
                                <div class="form-group">
                                    <input id="password" type="password" class="text-center form-control" placeholder="Password" name="password" autocomplete="on">
                                </div>
                                <div class="form-group m-0">
                                    <button type="submit" style="color: #fff;background-color: #2a0fbb;border-color: #140ba7;" class="btn btn-block font-size-18">Login</button>
                                </div>
                                 <div class="form-group mt-3">
                                    <div class="custom-checkbox custom-control p-0">
                                        <a class="font-size-12" style="text-decoration: none;" href="#">Forgot Password?</a>
                                    </div>
                                </div>
                                <div class=" text-center font-size-15">Don't have an account? <a class="" style="color: #2113ff!important;" href="/signup">Create One</a></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>